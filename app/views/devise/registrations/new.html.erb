
<div class="wrapper_skinny">
	
	<h2>Registro de Usuario</h2>

	<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	  <%= f.error_notification %>

	  <div class="form-inputs">
	    <%= f.input :email,  required: true, autofocus: true %>
	    <%= f.input :password, label: 'contraseña', required: true, hint: ("#{@minimum_password_length} caracteres minimo" if @minimum_password_length) %>
	    <%= f.input :password_confirmation, label: 'confirme contraseña', required: true %>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit, "Registrar" %>
	  </div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>